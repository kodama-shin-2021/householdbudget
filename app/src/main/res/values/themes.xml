<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Light Theme -->
    <style name="Base.Theme.HouseholdBudget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_100</item>
        <item name="colorOnPrimaryContainer">@color/primary_900</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_100</item>
        <item name="colorOnSecondaryContainer">@color/secondary_900</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/tertiary_500</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/tertiary_100</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_900</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_500</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_100</item>
        <item name="colorOnErrorContainer">@color/error_900</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_light</item>
        <item name="colorSurfaceInverse">@color/surface_inverse_light</item>
        <item name="colorOnSurfaceInverse">@color/on_surface_inverse_light</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/outline_light</item>
        <item name="colorOutlineVariant">@color/outline_variant_light</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        
        <!-- Window attributes -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.HouseholdBudget.CornerSmall</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.HouseholdBudget.CornerMedium</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.HouseholdBudget.CornerLarge</item>
        
        <!-- Motion attributes -->
        <item name="motionDurationLong1">@integer/material_motion_duration_long_1</item>
        <item name="motionDurationLong2">@integer/material_motion_duration_long_2</item>
        <item name="motionDurationMedium1">@integer/material_motion_duration_medium_1</item>
        <item name="motionDurationMedium2">@integer/material_motion_duration_medium_2</item>
        <item name="motionDurationShort1">@integer/material_motion_duration_short_1</item>
        <item name="motionDurationShort2">@integer/material_motion_duration_short_2</item>
        
        <!-- Elevation overlays -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">?attr/colorPrimary</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.HouseholdBudget" parent="Base.Theme.HouseholdBudget">
        <!-- Splash screen theme -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/primary_500</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/primary_500</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.HouseholdBudget.NoActionBar" parent="Theme.HouseholdBudget">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen Theme -->
    <style name="Theme.HouseholdBudget.Fullscreen" parent="Theme.HouseholdBudget.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- App Lock Theme -->
    <style name="Theme.HouseholdBudget.AppLock" parent="Theme.HouseholdBudget.NoActionBar">
        <item name="android:windowBackground">@color/primary_500</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.HouseholdBudget.CornerSmall" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.HouseholdBudget.CornerMedium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.HouseholdBudget.CornerLarge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>