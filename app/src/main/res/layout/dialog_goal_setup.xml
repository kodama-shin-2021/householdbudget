<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            tools:text="目標を設定" />

        <!-- Goal Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutGoalName"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="目標名">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGoalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLength="50"
                tools:text="新車購入資金" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Goal Type -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutGoalType"
            style="@style/Widget.Material3.TextInputLayout.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="目標タイプ">

            <AutoCompleteTextView
                android:id="@+id/actvGoalType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:text="貯金目標" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Target Amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTargetAmount"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="目標金額"
            app:prefixText="¥">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTargetAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                tools:text="1000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Current Amount (for editing existing goals) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCurrentAmount"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="現在の金額"
            android:visibility="gone"
            app:prefixText="¥"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                tools:text="450000" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Target Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTargetDate"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="目標達成日">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTargetDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none"
                tools:text="2024年12月31日" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category Association (for expense reduction goals) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutCategory"
            style="@style/Widget.Material3.TextInputLayout.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="関連カテゴリ（任意）"
            android:visibility="gone"
            tools:visibility="visible">

            <AutoCompleteTextView
                android:id="@+id/actvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                tools:text="食費" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Milestone Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="進捗通知"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMilestoneNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="マイルストーン達成時に通知する" />

            <LinearLayout
                android:id="@+id/layoutMilestoneOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                tools:visibility="visible">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupMilestones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMilestone25"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="25%" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMilestone50"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="50%" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMilestone75"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="75%" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMilestone90"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </LinearLayout>

        <!-- Goal Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutGoalDescription"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="メモ（任意）">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGoalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="3"
                android:maxLines="5"
                tools:text="家族旅行のための貯金目標" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="キャンセル" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>